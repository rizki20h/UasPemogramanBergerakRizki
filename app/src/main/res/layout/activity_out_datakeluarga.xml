<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#00cba9"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/wave">
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="440dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Data Orang Tua"
            android:textSize="45dp"
            android:textAlignment="center"
            android:fontFamily="@font/patrick"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="#00cba9"/>
        <TextView
            android:layout_marginStart="15dp"
            android:id="@+id/out_namaBapak"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25dp"
            android:textColor="#00cba9"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginStart="15dp"
            android:id="@+id/out_pekerjaanAyah"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25dp"
            android:textColor="#00cba9"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginStart="15dp"
            android:id="@+id/out_namaIbu"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25dp"
            android:textColor="#00cba9"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginStart="15dp"
            android:id="@+id/out_pekerjaanIbu"
            android:textColor="#00cba9"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25dp"/>
        <TextView
            android:layout_marginStart="15dp"
            android:id="@+id/out_alamat"
            android:textColor="#00cba9"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25dp"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:id="@+id/btn_homeOrtu"
            android:background="@drawable/home"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/wave2">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00cba9"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>